<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#79D7B8"
                android:centerColor="#66CDAA"
                android:endColor="#55BE9E"
                android:angle="90"/>
        </shape>
    </item>
    <item android:bottom="40dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#40FFFFFF"
                android:centerColor="#1FFFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"/>
        </shape>
    </item>
    <item android:top="48dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#14000000"
                android:endColor="#00000000"
                android:angle="-90"/>
        </shape>
    </item>
</layer-list>
